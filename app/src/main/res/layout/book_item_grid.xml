<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="8dp"
    android:layout_marginHorizontal="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/book_item_image_grid"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/book_suho_goes_to_pie"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.ExtraSmall"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/book_item_title_grid"
            style="@style/CardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Title"
            android:textAlignment="center"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/book_item_author_grid"
            style="@style/CardSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Subtitle"
            android:textAlignment="center"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>